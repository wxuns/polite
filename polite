#!/usr/bin/env php
<?php
// application.php

require __DIR__.'/vendor/autoload.php';

use \Symfony\Component\Console\Application;

$application = new Application('polite console','1.0.1');

// ... register commands

$application->add(new Polite\Console\Version());
$application->add(new Polite\Console\Maker\MakeController());
$application->add(new Polite\Console\Maker\MakeModel());

$application->run();